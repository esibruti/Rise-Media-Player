<Page
    x:Class="Rise.App.Views.NowPlayingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:behaviors="using:Microsoft.Toolkit.Uwp.UI.Triggers"
    xmlns:conv="using:Rise.App.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:markup="using:Rise.Common.Extensions.Markup"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:Microsoft.Toolkit.Uwp.UI.Media"
    xmlns:models="using:Rise.Models"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:skuc="using:SimpleKit.WindowsRuntime.UI.Controls"
    xmlns:uc="using:Rise.App.UserControls"
    xmlns:ui="using:Microsoft.Toolkit.Uwp.UI"
    xmlns:visualizers="using:Rise.App.Visualizers"
    d:Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    d:DesignHeight="300"
    d:DesignWidth="320"
    Loaded="OnPageLoaded"
    Unloaded="OnPageUnloaded"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <conv:StreamToBitmap x:Key="StrmToBmp" />
            <conv:ResourceFallback x:Key="ResFallback" />
            <conv:IntToVisibility x:Key="IntToVis" />
        </ResourceDictionary>
    </Page.Resources>

    <Grid x:Name="RootGrid">
        <Grid.Background>
            <ImageBrush
                x:Name="ThumbnailBrush"
                ImageSource="{x:Bind MPViewModel.PlayingItemProperties.Thumbnail, Mode=OneWay, Converter={StaticResource StrmToBmp}}"
                Stretch="UniformToFill" />
        </Grid.Background>

        <visualizers:BloomView
            x:Name="BloomVis"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            x:Load="False"
            Visibility="Collapsed" />

        <Border
            Grid.ColumnSpan="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
            <Border.Background>
                <media:AcrylicBrush
                    BlurAmount="70"
                    FallbackColor="Transparent"
                    TintColor="{Binding Color, Source={ThemeResource ApplicationPageBackgroundThemeBrush}}"
                    TintOpacity="0.7" />
            </Border.Background>
        </Border>

        <skuc:ExtendedTitleBar
            x:Name="TitleBar"
            Grid.ColumnSpan="2"
            Height="36"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            Canvas.ZIndex="1">
            <StackPanel Margin="48,0,0,0" Orientation="Horizontal">
                <FontIcon FontFamily="{StaticResource PlayerIconsFontFamily}" Glyph="&#xE768;" />

                <TextBlock
                    Margin="12,0,0,0"
                    VerticalAlignment="Center"
                    Text="{markup:ResourceHelper Name=NowPlaying}" />
            </StackPanel>
        </skuc:ExtendedTitleBar>

        <Button
            Height="28"
            Margin="4,4,0,0"
            VerticalAlignment="Top"
            Canvas.ZIndex="2"
            Click="OnExitButtonClick"
            Style="{StaticResource TransparentButtonStyle}"
            ToolTipService.ToolTip="{markup:ResourceHelper Name=Back}">
            <muxc:AnimatedIcon
                x:Name="BackAnimatedIcon"
                Width="16"
                Height="16">
                <muxc:AnimatedIcon.Source>
                    <animatedvisuals:AnimatedBackVisualSource />
                </muxc:AnimatedIcon.Source>
                <muxc:AnimatedIcon.FallbackIconSource>
                    <muxc:SymbolIconSource Symbol="Back" />
                </muxc:AnimatedIcon.FallbackIconSource>
            </muxc:AnimatedIcon>
        </Button>

        <uc:RiseMediaPlayerElement
            x:Name="MainPlayer"
            Grid.ColumnSpan="2"
            Margin="4,0,8,8"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch"
            Canvas.ZIndex="0"
            MediaPlayerVisibility="Visible">
            <uc:RiseMediaPlayerElement.TransportControls>
                <uc:RiseMediaTransportControls
                    x:Name="PlayerControls"
                    DisplayItemPosition="Top"
                    DisplayItemVisibility="Visible"
                    FullWindowCommand="{x:Bind ToggleFullScreenCommand}"
                    HorizontalControlsAlignment="Left"
                    IsCompactOverlayButtonVisible="True"
                    IsCompactOverlayEnabled="True"
                    IsEqualizerButtonEnabled="True"
                    IsEqualizerButtonVisible="True"
                    IsFullWindowButtonVisible="True"
                    IsNextTrackButtonVisible="True"
                    IsPreviousTrackButtonVisible="True"
                    IsQueueButtonEnabled="True"
                    IsQueueButtonVisible="True"
                    IsRepeatButtonVisible="True"
                    IsRepeatEnabled="True"
                    IsShuffleButtonChecked="{x:Bind MPViewModel.ShuffleEnabled, Mode=TwoWay}"
                    IsShuffleButtonVisible="True"
                    IsShuffleEnabled="True"
                    IsVolumeButtonVisible="True"
                    IsZoomButtonVisible="False"
                    ShowAndHideAutomatically="False">
                    <uc:RiseMediaTransportControls.Resources>
                        <SolidColorBrush x:Key="MediaTransportControlsPanelBackground" Color="Transparent" />

                        <x:Double x:Key="MTCPositionSliderMaximumWidth">400</x:Double>
                    </uc:RiseMediaTransportControls.Resources>
                    
                    <uc:RiseMediaTransportControls.DisplayItem>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition x:Name="SidebarColumn" Width="0" />
                            </Grid.ColumnDefinitions>

                            <Grid
                                x:Name="InfoGrid"
                                Margin="0,40,0,0"
                                HorizontalAlignment="Center"
                                x:DefaultBindMode="OneWay"
                                ColumnSpacing="12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition x:Name="ThumbnailColumn" Width="120" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Border
                                    x:Name="ThumbBorder"
                                    Width="120"
                                    Height="120"
                                    BorderBrush="{ThemeResource ControlElevationBorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8">
                                    <ui:Effects.Shadow>
                                        <media:AttachedCardShadow
                                            BlurRadius="8"
                                            CornerRadius="8"
                                            Opacity="0.2"
                                            Offset="0,4,0" />
                                    </ui:Effects.Shadow>

                                    <Border.Background>
                                        <ImageBrush ImageSource="{x:Bind MPViewModel.PlayingItemProperties.Thumbnail, Converter={StaticResource StrmToBmp}}" Stretch="UniformToFill" />
                                    </Border.Background>
                                </Border>

                                <Grid
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    RowSpacing="4">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                    </Grid.RowDefinitions>

                                    <TextBlock
                                        x:Name="TitleText"
                                        d:Text="Title"
                                        FontSize="24"
                                        FontWeight="Bold"
                                        MaxLines="2"
                                        Style="{StaticResource BodyTextBlockStyle}"
                                        Text="{x:Bind MPViewModel.PlayingItemProperties.Title}" />
                                    <TextBlock
                                        x:Name="SubtitleText"
                                        Grid.Row="1"
                                        d:Text="Subtitle"
                                        FontSize="18"
                                        FontWeight="SemiBold"
                                        Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                        MaxLines="2"
                                        Style="{StaticResource BodyTextBlockStyle}"
                                        Text="{x:Bind MPViewModel.PlayingItemProperties.Artist, Converter={StaticResource ResFallback}, ConverterParameter=UnknownArtistResource}" />
                                </Grid>
                            </Grid>

                            <Border
                                x:Name="SidebarGrid"
                                Grid.Column="1"
                                Width="292"
                                Margin="0,48,24,12"
                                Canvas.ZIndex="1"
                                Visibility="Collapsed">
                                <ui:Effects.Shadow>
                                    <media:AttachedCardShadow
                                        BlurRadius="64"
                                        CornerRadius="8"
                                        Opacity=".25"
                                        Offset="0,16,0" />
                                </ui:Effects.Shadow>

                                <Grid
                                    BorderBrush="{ThemeResource ControlElevationBorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8">
                                    <ListView
                                        x:Name="LyricsList"
                                        Padding="4,16,8,16"
                                        ItemContainerStyle="{StaticResource StretchedListViewItemStyle}"
                                        Loaded="OnLyricsListLoaded"
                                        SelectionMode="None">
                                        <ListView.Foreground>
                                            <LinearGradientBrush>
                                                <GradientStop Offset="0.2" Color="{ThemeResource ListViewItemPointerOverBackgroundThemeBrush}" />
                                                <GradientStop Offset="0.5" Color="{ThemeResource ApplicationForegroundThemeBrush}" />
                                                <GradientStop Offset="0.8" Color="{ThemeResource ListViewItemPointerOverBackgroundThemeBrush}" />
                                            </LinearGradientBrush>
                                        </ListView.Foreground>

                                        <ListView.ItemTemplate>
                                            <DataTemplate x:DataType="models:SyncedLyricItem">
                                                <uc:LyricItem IsSelected="{x:Bind IsSelected, Mode=OneWay}" Text="{x:Bind Text}" />
                                            </DataTemplate>
                                        </ListView.ItemTemplate>

                                        <ListView.Footer>
                                            <TextBlock
                                                Padding="0,12"
                                                HorizontalAlignment="Center"
                                                Foreground="{ThemeResource ApplicationForegroundThemeBrush}"
                                                Text="Licensed and provided by Musixmatch." />
                                        </ListView.Footer>
                                    </ListView>
                                </Grid>
                            </Border>
                        </Grid>
                    </uc:RiseMediaTransportControls.DisplayItem>
                </uc:RiseMediaTransportControls>
            </uc:RiseMediaPlayerElement.TransportControls>
        </uc:RiseMediaPlayerElement>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="LyricsAvailabilityStates">
                <VisualState x:Name="LyricsUnavailableState" />
                <VisualState x:Name="LyricsAvailableState">
                    <VisualState.Setters>
                        <Setter Target="SidebarGrid.Visibility" Value="Visible" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>

            <VisualStateGroup x:Name="PlaybackItemTypeStates">
                <VisualState x:Name="MusicItemState" />
                <VisualState x:Name="VideoItemState">
                    <VisualState.StateTriggers>
                        <behaviors:IsEqualStateTrigger Value="{x:Bind MPViewModel.PlayingItemType, Mode=OneWay}" To="Video" />
                    </VisualState.StateTriggers>

                    <VisualState.Setters>
                        <Setter Target="MainPlayer.VerticalContentAlignment" Value="Stretch" />
                        <Setter Target="MainPlayer.Margin" Value="0" />

                        <Setter Target="PlayerControls.IsCompact" Value="True" />
                        <Setter Target="PlayerControls.IsZoomButtonVisible" Value="True" />
                        <Setter Target="PlayerControls.DisplayItemVisibility" Value="Collapsed" />
                        <Setter Target="PlayerControls.ShowAndHideAutomatically" Value="True" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>

            <VisualStateGroup x:Name="VisualizerStates">
                <VisualState x:Name="NoVisualizerState" />
                <VisualState x:Name="BloomVisualizerState">
                    <VisualState.Setters>
                        <Setter Target="BloomVis.Visibility" Value="Visible" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>

            <VisualStateGroup x:Name="SizeStates">
                <VisualState x:Name="LargeSizeState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="400" MinWindowWidth="840" />
                    </VisualState.StateTriggers>

                    <VisualState.Setters>
                        <Setter Target="SidebarColumn.Width" Value="Auto" />

                        <Setter Target="ThumbBorder.Width" Value="184" />
                        <Setter Target="ThumbBorder.Height" Value="184" />
                        <Setter Target="ThumbnailColumn.Width" Value="190" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</Page>
