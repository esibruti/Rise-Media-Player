<ContentDialog
    x:Class="Rise.App.Dialogs.MusixmatchTokenDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:markup="using:Rise.Common.Extensions.Markup"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{markup:ResourceHelper Name=/Settings/MediaLibrarySetupLyrics}"
    DefaultButton="Primary"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    PrimaryButtonText="{markup:ResourceHelper Name=Ok}"
    SecondaryButtonText="{markup:ResourceHelper Name=Cancel}"
    Style="{StaticResource DefaultContentDialogStyle}"
    mc:Ignorable="d">

    <Grid RowSpacing="6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBox x:Name="TokenBox" />
        <HyperlinkButton
            Grid.Row="1"
            Content="{markup:ResourceHelper Name=/Settings/MediaLibrarySetupLyricsToken}"
            NavigateUri="https://developer.musixmatch.com/plans" />
    </Grid>
</ContentDialog>
